<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/flow_diagram"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:background="@color/system_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/step1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/apply_step_style_1"
            android:gravity="center"
            android:text="@string/all_right"
            android:textColor="@color/system_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/step_separate_line1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="13dp"
            android:background="@color/apply_step_style_2_color"
            app:layout_constraintLeft_toRightOf="@+id/step1"
            app:layout_constraintRight_toLeftOf="@+id/step2"
            app:layout_constraintTop_toTopOf="@+id/step1" />

        <TextView
            android:id="@+id/step2"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:background="@drawable/apply_step_style_2"
            android:gravity="center"
            android:text="@string/number_2"
            android:textColor="@color/system_color"
            app:layout_constraintLeft_toRightOf="@+id/step1"
            app:layout_constraintRight_toLeftOf="@+id/step3"
            app:layout_constraintTop_toTopOf="@+id/step1" />

        <View
            android:id="@+id/step_separate_line2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="13dp"
            android:background="@color/apply_step_style_2_color"
            app:layout_constraintLeft_toRightOf="@+id/step2"
            app:layout_constraintRight_toLeftOf="@+id/step3"
            app:layout_constraintTop_toTopOf="@+id/step1" />

        <TextView
            android:id="@+id/step3"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/apply_step_style_2"
            android:gravity="center"
            android:text="@string/number_3"
            android:textColor="@color/system_color"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/step1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="实名认证"
            android:textColor="@color/apply_step_style_1_color"
            android:textSize="11.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/step1"
            app:layout_constraintRight_toRightOf="@+id/step1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="个人信息"
            android:textColor="@color/apply_step_style_2_color"
            android:textSize="11.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/step2"
            app:layout_constraintRight_toRightOf="@+id/step2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="配偶信息"
            android:textColor="@color/apply_step_style_2_color"
            android:textSize="11.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/step3"
            app:layout_constraintRight_toRightOf="@+id/step3" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="5dp"
            android:src="@drawable/apply_step_triangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/step1"
            app:layout_constraintRight_toRightOf="@+id/step1" />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow_diagram">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="3dp"
                android:layout_height="11dp"
                android:layout_marginBottom="1.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/fill_vertical_line"
                app:layout_constraintBottom_toBottomOf="@+id/id_info"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/id_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7.5dp"
                android:layout_marginLeft="22dp"
                android:text="身份证信息"
                android:textColor="#666666"
                android:textSize="11.5sp"
                app:layout_constraintBottom_toTopOf="@+id/id_pic_group"
                app:layout_constraintLeft_toLeftOf="parent" />

            <LinearLayout
                android:id="@+id/id_pic_group"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="38dp"
                android:background="@mipmap/id_pics_group"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="42dp"
                        android:text="人像面"
                        android:textColor="#999999"
                        android:textSize="11.5dp" />

                    <FrameLayout
                        android:layout_width="155dp"
                        android:layout_height="95dp"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/autonym_certify_id_back_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/id_back" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/alphy_camera" />
                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="42dp"
                        android:text="国徽面"
                        android:textColor="#999999"
                        android:textSize="11.5dp" />

                    <FrameLayout
                        android:layout_width="155dp"
                        android:layout_height="95dp"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/autonym_certify_id_front_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/id_front" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/alphy_camera" />
                    </FrameLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_info_group"
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_pic_group">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/separate_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="姓名"
                        android:textColor="@color/textColor"
                        android:textSize="14.5sp" />

                    <EditText
                        android:id="@+id/autonym_certify_name_tv"
                        style="@style/apply_info_content"
                        android:hint="请填写姓名" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/separate_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="身份证号"
                        android:textColor="@color/textColor"
                        android:textSize="14.5sp" />

                    <EditText
                        android:id="@+id/autonym_certify_id_number_tv"
                        style="@style/apply_info_content_type_id"
                        android:hint="请填写身份证号码" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/separate_line_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/autonym_certify_next_btn"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/submit_button"
                android:enabled="true"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:translationZ="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_info_group"
                tools:enabled="false" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
