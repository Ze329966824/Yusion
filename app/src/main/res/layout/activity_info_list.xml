<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yusion.shanghai.yusion.ui.update.InfoListActivity">


    <com.yusion.shanghai.yusion.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/list_personal_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:onClick="onClick">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separate_line_height"
                android:background="@color/separate_line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:text="个人资料"
                android:textColor="#222A36"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/mine_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_line_height"
            android:layout_marginLeft="15dp"
            android:background="@color/separate_line_color" />

        <RelativeLayout
            android:id="@+id/list_personalspouse_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:onClick="onClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="配偶信息"
                android:textColor="#222A36"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/mine_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_line_height"
            android:background="@color/separate_line_color" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/guarantee_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/list_guarantor_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:onClick="onClick">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separate_line_height"
                android:background="@color/separate_line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:text="担保人资料"
                android:textColor="#222A36"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/mine_arrow_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_line_height"
            android:layout_marginLeft="15dp"
            android:background="@color/separate_line_color" />

        <RelativeLayout
            android:id="@+id/list_guarantorspouse_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:onClick="onClick">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="担保人配偶信息"
                android:textColor="#222A36"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/mine_arrow_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_line_height"
            android:background="@color/separate_line_color" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/add_guarantee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"

        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"

            android:descendantFocusability="blocksDescendants">


            <ImageView

                android:id="@+id/icon_add_guarantee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingBottom="10dp"
                android:src="@mipmap/add_guarantee" />


            <TextView
                android:id="@+id/list_info_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/icon_add_guarantee"
                android:layout_below="@id/icon_add_guarantee"
                android:paddingLeft="2dp"
                android:text="添加担保人信息，可为您" />

            <TextView
                android:id="@+id/list_info_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/list_info_text1"
                android:layout_below="@id/icon_add_guarantee"
                android:text="提高个人征信和融资额度"
                android:textColor="#f9c700" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
