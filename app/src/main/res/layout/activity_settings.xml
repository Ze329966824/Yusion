
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F5F7F9"
              android:orientation="vertical">

    <!--<com.wangzi.wangdai.widget.TitleBar-->
        <!--android:id="@+id/title_bar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_setting_agreement_layout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <TextView
                    android:id="@+id/main_setting_agreement"
                    android:layout_width="57dp"
                    android:layout_height="15dp"

                    android:layout_marginLeft="15dp"

                    android:text="用户协议"
                    android:textColor="#222A36"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/main_setting_agreement_next"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="240dp"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/mine_arrow_right"/>


            </LinearLayout>

            <View
                android:id="@+id/main_setting_agreement_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/main_setting_agreement"
                android:layout_marginLeft="15dp"
                android:background="#ffECECEC"/>

            <LinearLayout
                android:id="@+id/main_setting_version_name_layout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <TextView
                    android:id="@+id/main_setting_version_name"
                    android:layout_width="57dp"
                    android:layout_height="15dp"

                    android:layout_marginLeft="15dp"

                    android:text="版本信息"
                    android:textColor="#222A36"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="40.38dp"
                    android:layout_height="14.42dp"
                    android:layout_marginLeft="210dp"
                    android:text="V1.0.0"
                    android:textColor="#FF333333"
                    android:textSize="14.42dp"
                    />


            </LinearLayout>

            <View
                android:id="@+id/main_setting_version_name_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/main_setting_agreement"
                android:layout_marginLeft="15dp"
                android:background="#ffECECEC"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_setting_logout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:onClick="onClick">


                <TextView
                    android:id="@+id/main_setting_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="15dp"
                    android:text="退出登录"
                    android:textColor="#FF06B7A3"
                    android:textSize="16sp"/>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>