<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="259dp"
        android:layout_height="160dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="#FF222A36"
            android:textSize="17dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="建议使用本人手机设备，可增强审批通过率哦。"
            android:textColor="#999999"
            android:textSize="13.5sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FF06B7A3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/popup_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="否"
                android:textColor="#FF06B7A3"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/popup_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF06B7A3"
                android:gravity="center"
                android:text="是"
                android:textColor="#FFFFFFFF"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>